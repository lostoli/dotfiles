function mkscript(){
    if [[ ! -a ~/bin/$1.sh ]]; then 
        touch ~/bin/$1.sh && echo "#!/bin/sh" >! ~/bin/$1.sh && chmod +x ~/bin/$1.sh && $EDITOR ~/bin/$1.sh
    else
        echo "Script allready exists!"
    fi
}
